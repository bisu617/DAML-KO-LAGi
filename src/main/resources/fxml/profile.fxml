<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.registration.controllers.ProfileController">
   <top>
      <HBox styleClass="nav-bar" spacing="20.0" alignment="CENTER_LEFT">
         <Button fx:id="backButton" styleClass="nav-button" text="← Back to Dashboard" onAction="#handleBack" />
         <Label styleClass="nav-title" text="My Profile" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="welcomeLabel" styleClass="nav-button" text="Welcome, User" />
         <Button fx:id="logoutButton" styleClass="nav-button" text="Logout" onAction="#handleLogout" />
      </HBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true">
         <VBox styleClass="form-container" spacing="25.0">
            <Label styleClass="form-title" text="Student Profile Information" />
            
            <GridPane hgap="20.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints minWidth="150.0" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               
               <VBox styleClass="form-group" GridPane.columnIndex="0" GridPane.rowIndex="0">
                  <Label styleClass="form-label" text="Student ID:" />
                  <TextField fx:id="studentIdField" styleClass="form-field" editable="false" />
               </VBox>
               
               <VBox styleClass="form-group" GridPane.columnIndex="1" GridPane.rowIndex="0">
                  <Label styleClass="form-label" text="Username:" />
                  <TextField fx:id="usernameField" styleClass="form-field" editable="false" />
               </VBox>
               
               <VBox styleClass="form-group" GridPane.columnIndex="0" GridPane.rowIndex="1">
                  <Label styleClass="form-label" text="First Name:" />
                  <TextField fx:id="firstNameField" styleClass="form-field" />
               </VBox>
               
               <VBox styleClass="form-group" GridPane.columnIndex="1" GridPane.rowIndex="1">
                  <Label styleClass="form-label" text="Last Name:" />
                  <TextField fx:id="lastNameField" styleClass="form-field" />
               </VBox>
               
               <VBox styleClass="form-group" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                  <Label styleClass="form-label" text="Email Address:" />
                  <TextField fx:id="emailField" styleClass="form-field" />
               </VBox>
               
               <VBox styleClass="form-group" GridPane.columnIndex="0" GridPane.rowIndex="3">
                  <Label styleClass="form-label" text="Phone Number:" />
                  <TextField fx:id="phoneField" styleClass="form-field" promptText="(555) 123-4567" />
               </VBox>
               
               <VBox styleClass="form-group" GridPane.columnIndex="1" GridPane.rowIndex="3">
                  <Label styleClass="form-label" text="Current Password:" />
                  <PasswordField fx:id="passwordField" styleClass="form-field" />
               </VBox>
               
               <VBox styleClass="form-group" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
                  <Label styleClass="form-label" text="Address:" />
                  <TextArea fx:id="addressField" styleClass="form-field" prefRowCount="3" wrapText="true" />
               </VBox>
            </GridPane>
            
            <Label fx:id="messageLabel" text="" />
            
            <HBox spacing="15.0" alignment="CENTER">
               <Button fx:id="saveButton" styleClass="success-button" text="Save Changes" onAction="#handleSave" />
               <Button fx:id="resetButton" styleClass="secondary-button" text="Reset" onAction="#handleReset" />
               <Button fx:id="cancelButton" styleClass="danger-button" text="Cancel" onAction="#handleCancel" />
            </HBox>
            
            <Separator />
            
            <VBox spacing="15.0">
               <Label text="Account Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               <GridPane hgap="30.0" vgap="10.0">
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  
                  <VBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <Label fx:id="registeredCoursesLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4a90e2;" />
                     <Label text="Registered Courses" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
                  </VBox>
                  
                  <VBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                     <Label fx:id="totalCreditsLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #28a745;" />
                     <Label text="Total Credits" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
                  </VBox>
               </GridPane>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>