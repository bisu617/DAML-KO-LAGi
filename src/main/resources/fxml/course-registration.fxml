<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.registration.controllers.CourseRegistrationController">
   <top>
      <HBox styleClass="nav-bar" spacing="20.0" alignment="CENTER_LEFT">
         <Button fx:id="backButton" styleClass="nav-button" text="← Back to Dashboard" onAction="#handleBack" />
         <Label styleClass="nav-title" text="Course Registration" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="welcomeLabel" styleClass="nav-button" text="Welcome, User" />
         <Button fx:id="logoutButton" styleClass="nav-button" text="Logout" onAction="#handleLogout" />
      </HBox>
   </top>
   
   <center>
      <VBox styleClass="form-container" spacing="20.0">
         <HBox spacing="15.0" alignment="CENTER_LEFT">
            <Label styleClass="form-title" text="Available Courses" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" styleClass="secondary-button" text="🔄 Refresh" onAction="#handleRefresh" />
         </HBox>
         
         <Label fx:id="messageLabel" text="" />
         
         <ScrollPane fitToWidth="true" prefHeight="400.0">
            <VBox fx:id="coursesContainer" spacing="15.0">
               <!-- Course cards will be added dynamically -->
            </VBox>
         </ScrollPane>
         
         <Separator />
         
         <VBox spacing="15.0">
            <Label text="Registration Summary" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <HBox spacing="30.0" alignment="CENTER_LEFT">
               <VBox alignment="CENTER" spacing="5.0">
                  <Label fx:id="selectedCoursesLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4a90e2;" />
                  <Label text="Selected Courses" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
               </VBox>
               <VBox alignment="CENTER" spacing="5.0">
                  <Label fx:id="totalCreditsLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #28a745;" />
                  <Label text="Total Credits" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
               </VBox>
               <VBox alignment="CENTER" spacing="5.0">
                  <Label fx:id="alreadyRegisteredLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ffc107;" />
                  <Label text="Already Registered" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
               </VBox>
            </HBox>
         </VBox>
      </VBox>
   </center>
</BorderPane>